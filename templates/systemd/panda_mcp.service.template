[Unit]
Description=Panda MCP service
PartOf=panda.service
After=panda.service
After=network.target remote-fs.target nss-lookup.target

[Service]
User=atlpan
Nice=0
EnvironmentFile=/etc/sysconfig/panda_server_env
ExecStart=/bin/sh -c '@@virtual_env_setup@@ && python -u @@install_purelib@@/pandaserver/pandamcp/mcp_main.py >> /var/log/panda/panda_mcp_stdout.log 2>> /var/log/panda/panda_mcp_stderr.log'
Restart=on-failure

[Install]
WantedBy=panda.service
WantedBy=multi-user.target
